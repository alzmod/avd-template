{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "description": "Deploy VM extensions for domain join and session host configuration"
    },
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Virtual machine resource name"
            }
        },
        "hostPoolResourceId": {
            "type": "string",
            "metadata": {
                "description": "Host pool resource id"
            }
        },
        "registrationInfoToken": {
            "type": "securestring",
            "metadata": {
                "description": "Host pool registration info token"
            }
        },
        "artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of DSC artifacts"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Domain name for on-premises domain join"
            }
        },
        "domainJoinUsername": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Domain join username"
            }
        },
        "domainJoinPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Domain join password"
            }
        },
        "domainJoinOUPath": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Organizational Unit path for domain join"
            }
        }
    },
    "resources": [
        {
            "condition": "[not(equals(parameters('domainName'), ''))]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2024-03-01",
            "name": "[format('{0}/{1}', parameters('virtualMachineName'), 'JsonADDomainExtension')]",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "JsonADDomainExtension",
                "typeHandlerVersion": "1.3",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "name": "[parameters('domainName')]",
                    "ouPath": "[parameters('domainJoinOUPath')]",
                    "user": "[format('{0}\\{1}', parameters('domainName'), parameters('domainJoinUsername'))]",
                    "restart": true,
                    "options": 3
                },
                "protectedSettings": {
                    "password": "[parameters('domainJoinPassword')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2024-03-01",
            "name": "[format('{0}/{1}', parameters('virtualMachineName'), 'MicrosoftPowershellDSC')]",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.73",
                "settings": {
                    "modulesUrl": "[parameters('artifactsLocation')]",
                    "configurationFunction": "Configuration.ps1/AddSessionHost",
                    "properties": {
                        "hostPoolName": "[last(split(parameters('hostPoolResourceId'), '/'))]",
                        "aadJoin": true
                    }
                },
                "protectedSettings": {
                    "properties": {
                        "registrationInfoToken": "[parameters('registrationInfoToken')]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('virtualMachineName'), 'JsonADDomainExtension')]"
            ]
        }
    ]
}
